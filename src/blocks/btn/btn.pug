mixin btn(data)
	include ../icon/icon.pug
	
	if data.type && data.type === 'link'
		- var link = '#'
		if data.url
			- var link = data.url

		a.btn(href=link, class!=attributes.class, id!=attributes.id, role="button")
			if data.icon_l
				+icon(data.icon_l, data.icon_mod)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				+icon(data.icon_r, data.icon_mod)
	else
		- var type = 'button'
		if data.type && data.type === 'submit'
			- var type = 'submit'

		button.btn(class!=attributes.class, id!=attributes.id, type=type, name=data.name)
			if data.icon_l
				+icon(data.icon_l, data.icon_mod)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				+icon(data.icon_r, data.icon_mod)
